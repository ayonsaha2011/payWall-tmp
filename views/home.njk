    <script>
        // Get all elements with the class 'class-name-1'.
            let sourceElements = document.getElementsByClassName('botnames');

            // Replace 'class-name-2' with the name of your target class.
            let targetElement = document.getElementsByClassName('selectedBots')[0];

            // Replace 'active' with the name of your active class.
            let activeClass = 'active';

            for(let i = 0; i < sourceElements.length; i++) {
                sourceElements[i].addEventListener('click', function() {
                    // Remove the active class from all elements.
                    for(let j = 0; j < sourceElements.length; j++) {
                        sourceElements[j].classList.remove(activeClass);
                    }

                    // Add the active class to the clicked element.
                    this.classList.add(activeClass);

                    // Update the target element's text content.
                    targetElement.textContent = this.textContent;
                });
            }

            function submitContactForm(){
                var firstName = $('#firstName').val();
                var lastName = $('#lastName').val();
                var email = $('#email').val();
                var phone = $('#phone').val();
                var message = $('#message').val();
                var data = {
                    firstName: firstName,
                    lastName: lastName,
                    email: email,
                    phone: phone,
                    message: message
                }
                $.ajax({
                    url: '/contact-us',
                    type: 'POST',
                    data: data,
                    success: function(response){
                        console.log(response);
                        if(response.status == 'success'){
                            alert('Your message has been sent successfully');
                            $('#loginForm')[0].reset();
                        }else{
                            alert('Something went wrong');
                        }
                    }
                })
            }
            $('#loginForm').submit(function(e){
                e.preventDefault();
                submitContactForm();
            })
            
    </script>
