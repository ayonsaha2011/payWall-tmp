{% extends "admin/main-layout.html" %}

{% block title %}{{title}}{% endblock %}

{% block body %}
                <div class="profile-wrapper mt-5">
                    <div class="inner-profile-wrap">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card h-100">
                                    <div class="card-body profile-card-body pt-4">
                                        
                                        <form action="/admin/change-password" method="POST" data-schema="changePassword" data-redirect="noredirect">
                                                <div class="row gutters">
                                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                        <h6 class="mb-2">Change Password</h6>
                                                    </div>
                                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-3">
                                                        <div class="form-group">
                                                            <label for="oldPassword">Old Password<span
                                                                    class="mailstar"
                                                                    style="color: red;">*</span></label>
                                                            <div class="input-password-wrap">
                                                                <input type="password" value=""
                                                                    placeholder="Enter Old Password"
                                                                    class="form-control" id="oldPassword"
                                                                    name="oldPassword">
                                                                <i class="fa fa-eye-slash togglePassword" id="togglePassword1"
                                                                    style="margin-left: -30px; cursor: pointer;"></i>
                                                            </div>
                                                            <div class="invalid-feedback-box"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-3">
                                                        <div class="form-group">
                                                            <label for="password">New Password<span
                                                                    class="mailstar"
                                                                    style="color: red;">*</span></label>
                                                            <div class="input-password-wrap">
                                                                <input type="password" value=""
                                                                    placeholder="Enter New Password"
                                                                    class="form-control" id="password"
                                                                    name="password">
                                                                <i class="fa fa-eye-slash togglePassword" id="togglePassword2"
                                                                    style="margin-left: -30px; cursor: pointer;"></i>
                                                            </div>
                                                            <div class="invalid-feedback-box"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-3">
                                                        <div class="form-group">
                                                            <label for="confirmPassword">Confirm Password<span
                                                                    class="mailstar"
                                                                    style="color: red;">*</span></label>
                                                            <div class="input-password-wrap">
                                                                <input type="password" value=""
                                                                    placeholder="Enter Confirm Password"
                                                                    class="form-control" id="confirmPassword"
                                                                    name="confirmPassword">
                                                                <i class="fa fa-eye-slash togglePassword" id="togglePassword3"
                                                                    style="margin-left: -30px; cursor: pointer;"></i>
                                                            </div>
                                                            <div class="invalid-feedback-box"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row gutters mt-3">
                                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                        <div class="text-right profile-update-wrap">
                                                            <button type="submit" id="submit" name="submit"
                                                                class="btn btn-primary">Save</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

{% endblock %}

{% block scriptBlock %}
    <script src="/admin/custom.js"></script>
{% endblock %}