{% extends "admin/main-layout.html" %}

{% block title %}{{title}}{% endblock %}

{% block body %}
                <div class="profile-wrapper mt-5">
                    <div class="inner-profile-wrap">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card h-100">
                                    <div class="card-body profile-card-body pt-4">

                                        <form action="/admin/profile" method="POST" data-schema="profile" data-redirect="noredirect" data-reset="noreset">
                                            <div class="row gutters">
                                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                    <h6 class="mb-2">Profile Information</h6>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-3">
                                                    <div class="form-group">
                                                        <label for="firstName">First Name<span class="mailstar"
                                                                style="color: red;">*</span></label>

                                                        <input type="text" class="form-control" id="basic-default-fullname" placeholder="Enter your first name " name="firstName" value="{{user.firstName}}" />
                                                        <div class="invalid-feedback-box"></div>
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-3">
                                                    <div class="form-group">
                                                        <label for="lastName">Last Name<span class="mailstar"
                                                                style="color: red;">*</span></label>
                                                        <input type="text" class="form-control" id="lastName"
                                                            placeholder="Enter Last Name" name="lastName" value="{{user.lastName}}">
                                                        <div class="invalid-feedback-box"></div>
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-3">
                                                    <div class="form-group">
                                                        <label for="eMail">Email Address<span class="mailstar"
                                                                style="color: red;">*</span></label>
                                                        <input type="email" class="form-control" id="eMail"
                                                            placeholder="Enter Email Address" name="email" readOnly value="{{user.email}}">
                                                        <div class="invalid-feedback-box"></div>
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-3">
                                                    <div class="form-group">
                                                        <label for="phone">Phone Number<span class="mailstar"
                                                                style="color: red;">*</span></label>
                                                        <input type="text" class="form-control" id="phone"
                                                            placeholder="Enter Phone Number" name="phone" value="{{user.phone}}">
                                                        <div class="invalid-feedback-box"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row gutters mt-3">
                                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                    <div class="text-right profile-update-wrap">
                                                        <button type="submit" id="submit" name="submit"
                                                            class="btn btn-primary">Update</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

{% endblock %}

{% block scriptBlock %}
    <script src="/admin/custom.js"></script>
{% endblock %}